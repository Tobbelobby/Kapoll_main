CREATE TABLE Kapoller (ID BIGINT GENERATED BY DEFAULT AS IDENTITY NOT NULL, FIRSTNAME VARCHAR(255), LASTNAME VARCHAR(255), PASSWORD VARCHAR(255), USERNAME VARCHAR(255), PRIMARY KEY (ID))
CREATE TABLE POLL (ID BIGINT GENERATED BY DEFAULT AS IDENTITY NOT NULL, QUESTION VARCHAR(255), TIME INTEGER, TITLE VARCHAR(255), owner BIGINT, VOTE_VOTER_ID BIGINT, PRIMARY KEY (ID))
CREATE TABLE POLL_RESULT (ID BIGINT GENERATED BY DEFAULT AS IDENTITY NOT NULL, NOVOTE INTEGER, UTILDATE TIMESTAMP, YESVOTE INTEGER, pollid BIGINT, PRIMARY KEY (ID))
CREATE TABLE VOTERS (VOTER_ID BIGINT GENERATED BY DEFAULT AS IDENTITY NOT NULL, POLL_ID BIGINT, VOTE INTEGER, PRIMARY KEY (VOTER_ID))
ALTER TABLE POLL ADD CONSTRAINT POLL_VOTE_VOTER_ID FOREIGN KEY (VOTE_VOTER_ID) REFERENCES VOTERS (VOTER_ID)
ALTER TABLE POLL ADD CONSTRAINT FK_POLL_owner FOREIGN KEY (owner) REFERENCES Kapoller (ID)
ALTER TABLE POLL_RESULT ADD CONSTRAINT POLL_RESULT_pollid FOREIGN KEY (pollid) REFERENCES POLL (ID)
